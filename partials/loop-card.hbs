





<div class="banner columns is-vcentered" data-aos="fade-up" data-aos-delay="{{@number}}00" data-aos-offset="0">
<div class="column is-half has-text-centered">

  <div class="banner-img" style="--banner-color: var(--{{slug}})">
    <div class="img-bg">
      <a href="{{url}}">  <img src="{{feature_image}}" alt=""></a>
    </div>
  </div>
  <div class="banner-tag" >
  <p><span>{{tags limit="1"}}</span></p>
  </div>
  </div>

<div class="column is-half banner-txt">
  <h2>{{title}}</h2>
  <p class="reading-time">{{reading_time}}</p>
  <a href="{{url}}">Read more</button></a>

</div>
</div>
